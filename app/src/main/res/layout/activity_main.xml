<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="activity"
            type="kr.eunice.custume.MainActivity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

        <kr.eunice.custume.EditPanelView
            android:id="@+id/image_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/second_primary"
            app:imageUri="@{activity.imageUri}"
            app:layout_constraintBottom_toTopOf="@id/button_show_floating_image"
            app:layout_constraintDimensionRatio="w, 1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_load_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_upload"
            android:text="@string/load_image"
            android:onClick="@{() -> activity.loadImage()}"
            android:visibility="@{activity.imageUri == null ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/image_panel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_panel" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_show_floating_image"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accent"
            android:onClick="@{activity.onClick}"
            android:text="@string/button_go_to_dress_up"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>