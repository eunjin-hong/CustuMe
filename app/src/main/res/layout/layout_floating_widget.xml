<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="service"
            type="kr.eunice.custume.FloatingViewService" />

    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/relativeLayoutParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:onTouch="@{service.onTouchListener}"
            tools:ignore="UselessParent">

            <!-- this is the collapsed layout -->
            <RelativeLayout
                android:id="@+id/layoutCollapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{service.showExpandedView ? View.GONE: View.VISIBLE}">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/collapsed_iv"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="8dp"
                    android:src="@android:drawable/ic_menu_gallery" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/buttonClose"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="50dp"
                    android:onClick="@{service.onClickListener}"
                    android:src="@android:drawable/ic_menu_close_clear_cancel" />
            </RelativeLayout>

            <!-- this is the expanded layout -->
            <LinearLayout
                android:id="@+id/layoutExpanded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#a0c3d7"
                android:onClick="@{() -> service.collapseView()}"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="@{service.showExpandedView ? View.VISIBLE: View.GONE}">

                <ImageView
                    android:id="@+id/buttonSimplifiedCodingExpanded"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/buttonSimplifiedCoding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="15dp"
                        android:text="Simplified Coding"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="www.simplifiedcoding.net"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</layout>